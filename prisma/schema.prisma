generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contest {
  id             Int      @id @default(autoincrement())
  concurso       Int      @unique
  dataSorteio    DateTime
  bola01         Int
  bola02         Int
  bola03         Int
  bola04         Int
  bola05         Int
  bola06         Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("concursos")
}

model GameAnalysis {
  id          Int      @id @default(autoincrement())
  gameId      String
  strategy    String
  numbers     String   // JSON array of numbers
  stats       String?  // JSON object with game statistics
  isValid     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("game_analysis")
}